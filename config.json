{
  "name": "Matrix Synapse (SQLite)",
  "version": "0.1.0",
  "slug": "matrix_synapse",
  "description": "Matrix Synapse homeserver (SQLite) for Home Assistant (use DuckDNS + Nginx Proxy Manager for TLS).",
  "arch": ["amd64", "armv7", "arm64"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "server_name": "example.com",
    "report_stats": false,
    "data_path": "/data",
    "http_port": 8008,
    "bind_address": "0.0.0.0",
    "enable_registration": false,
    "registration_shared_secret": "",
    "synapse_config_overrides": {}
  },
  "schema": {
    "server_name": "str",
    "report_stats": "bool",
    "data_path": "str",
    "http_port": "int",
    "bind_address": "str",
    "enable_registration": "bool",
    "registration_shared_secret": "str",
    "synapse_config_overrides": "dict"
  },
  "map": [
    ["config", "rw"],
    ["data", "rw"],
    ["ssl", "ro"]
  ],
  "ports": {
    "8008/tcp": 8008,
    "8448/tcp": 8448
  },
  "webui": "http://[HOST]:8008/_matrix/static/",
  "ingress": false,
  "host_network": false,
  "auto_uart": false,
  "host_dbus": false,
  "privileged": false
}

